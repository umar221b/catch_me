<% provide(:title, "Log in") %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 style="text-align: center;">Info</h1>
    </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:info, url: info_path, method: :post) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :color %>
      <input class="form-control" type="text" name="info[color]" id="info_color">

      <%= f.submit "Play!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#info_color').colorpicker();
  });
</script>
